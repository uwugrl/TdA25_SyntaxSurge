datasource db {
    provider = "sqlite"
    url      = "file:./data/data.db"
}

generator client {
    provider = "prisma-client-js"
}

model Game {
    id         String      @id
    name       String
    createdAt  DateTime    @default(now())
    updatedAt  DateTime    @updatedAt
    difficulty Int
    board      GameBoard[]
}

model GameBoard {
    id     Int    @id @default(autoincrement())
    x      Int
    y      Int
    game   Game   @relation(fields: [gameId], references: [id])
    gameId String
    state  Int
}
